<android.support.v7.widget.CardView android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_margin="16dp"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    card_view:cardPreventCornerOverlap="false"
    app:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="4dp"
    app:cardElevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="68dp"
            android:typeface="serif"
            android:shadowColor="@color/colorPrimary"
            android:shadowRadius="1.5"
            android:textSize="15sp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:layout_marginEnd="68dp"
            android:id="@+id/textView12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView17"
            android:layout_alignRight="@+id/textView12"
            android:layout_alignEnd="@+id/textView12"
            android:typeface="serif"
            android:shadowColor="@color/colorPrimary"
            android:shadowRadius="1.5"
            android:textSize="15sp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:id="@+id/textView18" />

        <TextView
            android:text="Date Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView17"
            android:layout_alignStart="@+id/textView17"
            android:layout_marginTop="96dp"
            android:layout_marginBottom="8dp"
            android:typeface="serif"
            android:shadowColor="@color/colorPrimary"
            android:shadowRadius="1.5"
            android:textSize="15sp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:id="@+id/textView24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView24"
            android:typeface="serif"
            android:shadowColor="@color/colorPrimary"
            android:shadowRadius="1.5"
            android:textSize="15sp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/textView18"
            android:layout_alignEnd="@+id/textView18"
            android:id="@+id/textView25" />

        <TextView
            android:text="Merchant's Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:typeface="serif"
            android:shadowColor="@color/colorPrimary"
            android:shadowRadius="1.5"
            android:textSize="15sp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:id="@+id/textView10"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp" />

        <TextView
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:typeface="serif"
            android:shadowColor="@color/colorPrimary"
            android:shadowRadius="1.5"
            android:textSize="15sp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:layout_marginStart="25dp"
            android:layout_marginTop="12dp"
            android:id="@+id/textView17"
            android:layout_below="@+id/textView10"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10" />


    </RelativeLayout>

</android.support.v7.widget.CardView>