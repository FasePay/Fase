<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Account Details"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#e86d66"
        android:textSize="20dp"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/editTextbname"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_60dp"
        android:layout_marginTop="10dp"
        app:errorEnabled="true">

    <EditText
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Bank Name"
        android:ems="10"
        android:id="@+id/editTextbank" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editTextaccno"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_60dp"
        app:counterEnabled="true"
        app:counterMaxLength="16"
        app:errorEnabled="true">

        <EditText
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="16"
            android:hint="Account Number"
            android:ems="10"
            android:id="@+id/editTextacc" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/editTextifscno"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_60dp"
        app:counterEnabled="true"
        app:counterMaxLength="11"
        app:errorEnabled="true">

        <EditText
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="11"
            android:hint="IFSC Code"
            android:ems="10"
            android:id="@+id/editTextifsc" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/editTextaccholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pad_60dp"
        app:errorEnabled="true">

        <EditText
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Account Holder Name"
            android:ems="10"
            android:id="@+id/editTextholder" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Save"
        android:textColor="#e86d66"
        android:textStyle="bold"/>
</LinearLayout>
</ScrollView>