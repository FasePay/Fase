<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_otp_client"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faseapp.faseapp.OtpClient">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:weightSum="100"
        tools:context="com.faseapp.faseapp.Password_activity"
        android:layout_above="@+id/buttonOtpActivity"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/ewallet"
            android:id="@+id/imageview_password"
            android:layout_weight="55"
            />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/editTextotp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterMaxLength="6"
            app:counterEnabled="true"
            app:errorEnabled="true">

        <EditText
            android:paddingLeft="10dp"
            android:hint="Enter Otp"
            android:textColor="@color/textColor"
            android:layout_marginLeft="@dimen/size_40dp"
            android:layout_marginRight="@dimen/size_40dp"
            android:layout_marginTop="@dimen/size_40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="number"
            android:ems="10"
            android:maxLength="6"
            android:id="@+id/editTextOtpClient"
            />
</android.support.design.widget.TextInputLayout>



    </LinearLayout>

    <Button

        android:textColor="@color/cream_white"
        android:layout_marginLeft="@dimen/size_40dp"
        android:layout_marginRight="@dimen/size_40dp"
        android:background="@drawable/button_border_redbg"
        android:layout_marginBottom="18dp"
        android:text="Sign Up"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/buttonOtpActivity"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
