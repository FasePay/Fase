<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginsign"
    tools:context="com.faseapp.faseapp.LoginSignup">

    <ProgressBar
        android:indeterminate="true"
        android:indeterminateTint="@color/colorAccent"
        android:id="@+id/progressBar1"
        style="@android:style/Widget.Holo.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" />

    <Button
        android:elevation="@dimen/cardview_default_elevation"
        android:layout_marginRight="@dimen/size_60dp"
        android:layout_marginLeft="60dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginBottom="33dp"
        android:id="@+id/login_button"
        android:textColor="@color/cream_white"
        android:background="@drawable/button_with_round_corner"
        android:text="Sign in"
        android:layout_above="@+id/buttonSignup" />

    <Button
        android:layout_marginLeft="@dimen/size_60dp"
        android:layout_marginRight="@dimen/size_60dp"
        android:text="Sign up"
        android:textColor="@color/cream_white"
        android:background="@drawable/button_with_round_corner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/buttonSignup"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
