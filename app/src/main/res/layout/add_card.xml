<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <TextView
        android:textSize="@dimen/size_25sp"
        android:textAlignment="center"
        android:text="Card Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:typeface="serif"
        android:shadowColor="@color/colorPrimary"
        android:id="@+id/textView4"/>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_card"
        android:orientation="horizontal"
        android:id="@+id/layoutAddCard"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="100">
        <ImageView
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/ic_home_black_48px"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            />
        <android.support.design.widget.TextInputLayout android:id="@+id/chname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:errorEnabled="true">
            <EditText
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editText"
                android:hint="Card Holder's Name"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/margin_card"
        android:orientation="horizontal"
        android:id="@+id/layout_number"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="100">
        <ImageView android:layout_margin="5dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_card_number_black_24dp"
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/cardnumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="16"
            app:errorEnabled="true">
            <EditText android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_gravity="center"
                android:hint="Card Number"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_marginTop="@dimen/margin_card"
    android:orientation="horizontal"
    android:id="@+id/layout_date"
    android:layout_marginLeft="@dimen/size_20dp"
    android:layout_marginRight="@dimen/size_20dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:weightSum="100">
    <ImageView
        android:layout_margin="5dp"
        android:background="@drawable/ic_date_black_24dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/expirytext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true">
        <EditText
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText3"
            android:hint="Expiry/Valid(MM/YY)"/>
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
    <LinearLayout android:layout_marginTop="@dimen/margin_card"
        android:orientation="horizontal"
        android:id="@+id/layout_cvv"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="100">
        <ImageView android:layout_margin="5dp"
            android:background="@drawable/ic_credit_card_black_24dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/cvvtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="3"
            app:errorEnabled="true">
            <EditText android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText4"
                android:hint="CVV(on back)"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <TextView

        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/layout_cvv"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="22sp"/>

    <Button
        android:stateListAnimator="@null"
        android:layout_marginLeft="@dimen/size_30dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:text="Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/button_with_border"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

</LinearLayout>