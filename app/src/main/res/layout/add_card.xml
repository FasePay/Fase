<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="@color/cream_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <TextView
        android:textSize="@dimen/size_25sp"
        android:textAlignment="center"
        android:text="Card Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:typeface="serif"
        android:shadowColor="@color/colorPrimary"
        android:id="@+id/textView4"
      />
    <LinearLayout
        android:layout_marginTop="@dimen/size_10dp"
        android:orientation="horizontal"
        android:id="@+id/layoutAddCard"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">
        <ImageView
            android:layout_margin="5dp"
            android:background="@drawable/ic_home_black_48px"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="match_parent" />

        <EditText
            android:layout_weight="85"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:ems="10"

            android:id="@+id/editText"
            android:hint="Card Holder's Name" />

    </LinearLayout>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:layout_marginTop="30dp"
        android:id="@+id/editText2"
        android:hint="Card Number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText2"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2"
        android:layout_marginTop="30dp"
        android:id="@+id/editText3"
        android:hint="Expiry/Valid(MM/YY)" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/editText3"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:layout_marginTop="30dp"
        android:id="@+id/editText4"
        android:hint="CVV(on back)" />

    <TextView
        android:text="SKIP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="30dp"
        android:textSize="22sp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_marginLeft="@dimen/size_30dp"
        android:layout_marginRight="@dimen/size_30dp"
        android:text="Add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:background="@drawable/button_with_border"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

</LinearLayout>